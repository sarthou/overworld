  <exec_depend condition="$ROS_VERSION == 1">ontologenius</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">roscpp</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">std_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf2</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf2_ros</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf2_geometry_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf2_eigen</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">bullet</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">roslib</exec_depend>
