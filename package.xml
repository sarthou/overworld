  <build_export_depend condition="$ROS_VERSION == 1">tf2_eigen</build_export_depend>
  <build_export_depend condition="$ROS_VERSION == 1">bullet</build_export_depend>
  <build_export_depend condition="$ROS_VERSION == 1">eigen</build_export_depend>
  <build_export_depend condition="$ROS_VERSION == 1">message_filters</build_export_depend>
  <build_export_depend condition="$ROS_VERSION == 1">sensor_msgs</build_export_depend>
  <build_export_depend condition="$ROS_VERSION == 1">visualization_msgs</build_export_depend>
  <build_export_depend condition="$ROS_VERSION == 1">geometry_msgs</build_export_depend>
